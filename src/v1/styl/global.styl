.wf-exo2-n4-active
  font-family 'Exo 2', sans-serif

html, body
  padding 0
  margin 0

body
  background-color #fff
  font-smoothing antialiased
  position relative

body, a
  color rgba(245, 245, 245, 0.65)

.bg
  background url('./graphics/bg_starfield_vignette.jpg') repeat scroll 50% 0 / cover #1e222b
  position fixed
  top 0
  width 100%
  height 100%
  z-index -1

.pad
  padding 0 18px
  max-width 1500px
  margin 0 auto

.title
  font-size 1.3em
  color #ffce1f

#footer
  padding-bottom 1.33em

.vk
  display inline-block
  width 50px
  height 50px
  background url('./graphics/vk.svg') 50% 50% no-repeat
  background-size cover
